<!-- views/shop.hbs -->
<div class="row">
    {{#if data.post}}
        <div class="col-md-8">
            <article>
                <h2>{{data.post.title}}</h2>
                <img src="{{data.post.featureImage}}" alt="Feature Image" style="width:100%;height:auto;">
                <br /><br />
                {{#safeHTML}}{{data.post.body}}{{/safeHTML}}
                <br /><br />
                <p><strong>Category:</strong> {{data.post.category}}</p>
                <p><strong>Price:</strong> {{data.post.price}}</p>
                <p><strong>Last Updated:</strong> {{#formatDate data.post.itemDate}}{{/formatDate}}</p>
            </article>
        </div>
    {{else}}
        <div class="col-md-12 text-center">
            <h2>{{data.message}}</h2>
            <p>Please try another Post / Category</p>
        </div>
    {{/if}}
    <div class="col-md-4">
        {{#if data.items}}
            <h4>Items</h4>
            <ul>
                {{#each data.items}}
                    <li><a href="/shop/{{this.id}}?category={{../viewingCategory}}" class="custom-link">{{this.title}}</a></li>
                {{/each}}
            </ul>
        {{/if}}
        {{#if data.categories}}
            <h4>Categories</h4>
            <ul>
                {{#each data.categories}}
                    <li>
                        <a href="/shop?category={{this.id}}" class="custom-link">
                            {{this.name}}
                        </a>
                    </li>
                {{/each}}
            </ul>
        {{/if}}
    </div>
</div>
